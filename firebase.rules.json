{
  "rules": {
    "games": {
      "$gameId": {
        ".read": true,
        ".write": "auth != null && (!data.exists() || root.child('games').child($gameId).child('participants').child(auth.uid).exists())"
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        ".validate": "newData.hasChildren(['username', 'email', 'createdAt']) && newData.child('username').isString() && newData.child('username').val().matches(/^[a-zA-Z0-9_]{3,20}$/)"
      }
    }
  }
}